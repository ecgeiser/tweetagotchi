<%= form_for([@types, @pet]) do |f| %>
	<%= f.hidden_field :user, current_user.id %>
	Name: <%= f.text_field :name %><br>
	Species: 
	<%= f.radio_button :pet_type_id, 'dog' %>
	<%= f.label :pet_type_id, 'Dog', value: 1 %>
	<%= f.radio_button :pet_type_id, 'cat' %>
	<%= f.label :pet_type_id, 'Cat', value: 2 %><br>
	<%= f.submit %>
<% end %>